<Window x:Class="Faster_than_Light.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Faster_than_Light"
        mc:Ignorable="d"
        Title="Быстрее света" WindowState="Maximized" MinHeight="550" MinWidth="800"  Icon="Image/Logo.ico">
    <Grid x:Name="MainGrid"  >
        <Grid.RowDefinitions>
            <RowDefinition  MinHeight="25" Height="*" />
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  MaxWidth="350" MinWidth="250" Width="3*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>

        <!---->
        <StackPanel x:Name="MainStackPanel" Grid.Row="0" Background="#046380" Grid.Column="0" Grid.RowSpan="2" >
            <StackPanel Margin="10 0 0 0"  HorizontalAlignment="Left">
                <Button Click="ButtonDriverIdentification_Click" x:Name="ButtonDriverIdentification" Background="Transparent" BorderBrush="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="HighQuality"  Source="/Image/DriverIdentification_white.png" MaxHeight="50" MinHeight="15" />
                        <TextBlock Margin="10" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left">ВУ</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel >
            <StackPanel Margin="10 0 0 0" HorizontalAlignment="Left">
                <Button Click="ButtonCargoCategory_Click" x:Name="ButtonCargoCategory" Background="Transparent" BorderBrush="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Image/CargoСategory_white.png" MaxHeight="50" MinHeight="15" />
                        <TextBlock Margin="10" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left">Категории</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel >
            <StackPanel Margin="10 0 0 0" HorizontalAlignment="Left">
                <Button Click="ButtonClient_Click" x:Name="ButtonClient" Background="Transparent" BorderBrush="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Image/Client_white.png" MaxHeight="50" MinHeight="15" />
                        <TextBlock Margin="10" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left">Клиенты</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel >
            <StackPanel Margin="10 0 0 0" HorizontalAlignment="Left">
                <Button x:Name="ButtonCar" Click="ButtonCar_Click"  Background="Transparent" BorderBrush="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Image/Track_white.png" MaxHeight="50" MinHeight="15" />
                        <TextBlock Margin="10" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left">Машины</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
            <StackPanel Margin="10 0 0 0" HorizontalAlignment="Left">
                <Button Click="ButtonLocationBase_Click" x:Name="ButtonLocationBase" Background="Transparent" BorderBrush="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="HighQuality"  Source="/Image/LocationBase_white.png" MaxHeight="50" MinHeight="15" />
                        <TextBlock Margin="10" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left">Места базирования</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
            <StackPanel Margin="10 0 0 0" HorizontalAlignment="Left">
                <Button Click="ButtonPackage_Click" x:Name="ButtonPackage" Background="Transparent" BorderBrush="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="HighQuality"  Source="/Image/Package_white.png" MaxHeight="50" MinHeight="15" />
                        <TextBlock Margin="10" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left">Посылки</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
            <StackPanel Margin="10 0 0 0" HorizontalAlignment="Left">
                <Button Click="ButtonPointReception_Click" x:Name="ButtonPointReception" Background="Transparent" BorderBrush="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="HighQuality"  Source="/Image/PointReception_white.png" MaxHeight="50" MinHeight="15" />
                        <TextBlock Margin="10" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left">Пункты выдачи</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
            <StackPanel Margin="10 0 0 0" HorizontalAlignment="Left">
                <Button Click="ButtonWarehouse_Click" x:Name="ButtonWarehouse" Background="Transparent" BorderBrush="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="HighQuality"  Source="/Image/Warehouse_white.png" MaxHeight="50" MinHeight="15" />
                        <TextBlock Margin="10" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left">Склады</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
            <StackPanel Margin="10 0 0 0" HorizontalAlignment="Left">
                <Button Click="ButtonEmploee_Click" x:Name="ButtonEmploee" Background="Transparent" BorderBrush="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="HighQuality"  Source="/Image/Employee_white.png" MaxHeight="50" MinHeight="15" />
                        <TextBlock Margin="10" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Left">Сотрудники</TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
        

        <StackPanel  HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="0"  Grid.Column="1">
            <!--<Viewbox VerticalAlignment="Center" MaxWidth="500"   >
                <TextBlock> Функции технического специалиста</TextBlock>
            </Viewbox>-->
            <Button VerticalAlignment="Center" VerticalContentAlignment="Center" MaxHeight="60" ToolTip="Функции технического специалиста" Background="Transparent" BorderBrush="Transparent" >
                <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Image/gear_with_key.png" MaxHeight="60" MinHeight="25"/>
            </Button>
        </StackPanel>

        <Frame Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"  Grid.ColumnSpan="2" x:Name="FrameAuthorization" NavigationUIVisibility="Hidden" Navigated="FrameAuthorization_Navigated"  />
        <Frame Grid.Column="1" Grid.Row="1" x:Name="FrameCarInfo" NavigationUIVisibility="Hidden"  />

    </Grid>
</Window>
